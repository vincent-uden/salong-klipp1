---
const { text, align, id } = Astro.props;

const textAlignment = "text-center"
const rounding = "rounded-full";
---
<div class={`flex flex-row w-full items-center`} id={id}>
  <div class={`${rounding} bg-gradient-to-r from-gold-light to-gold-dark py-3 w-full drop-shadow`}>
      <p class={textAlignment + " text-fg text-3xl font-serif"}>{text}</p>
  </div>
</div>
